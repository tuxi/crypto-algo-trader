# config/config.yaml
# ----------------------------------------------------
# 交易平台配置 - 使用 Okx 永续合约
Exchange:
  Name: "OKX"
  APIKey: "YOUR_OKX_API_KEY"
  SecretKey: "YOUR_OKX_SECRET_KEY"
  Passphrase: "YOUR_OKX_PASSPHRASE" # Okx 独有
  WSURL: "wss://ws.okx.com:8443/ws/v5/public" # Okx 公共频道 WS 入口
  RESTURL: "https://www.okx.com"

# 交易风控配置
Risk:
  MaxTotalCapital: 100000.0   # 示例总资金（USD）
  MaxPerTradeRisk: 0.01       # 单笔交易最大风险暴露 1%
  FixedLeverage: 5            # 固定杠杆倍数
  Symbol: "BTCUSDT"           # 交易对
  QuoteCurrency: "USDT"

# 策略启动默认参数
Strategy:
  DefaultMode: "LOW_VOL_RANGING"
  Grid:
    InitialSpacing: 0.005 # 初始网格间距 0.5%
  Trend:
    FastMA: 5
    SlowMA: 20